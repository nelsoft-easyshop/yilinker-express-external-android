<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.yilinker.expresspublic">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.yilinker.expresspublic.permission.C2D_MESSAGE" />
    <!-- Custom Permission -->
    <permission android:name="com.yilinker.expresspublic.permission.C2D_MESSAGE" android:protectionLevel="signature" />
    <!-- Features -->
    <uses-feature android:glEsVersion="0x00020000" android:required="true"/>

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">
        <activity
            android:name=".modules.home.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.login.LogInActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.registration.RegistrationActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.findBranch.SearchBranchesActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.bookDelivery.BookDeliveryActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.bookDelivery.PackageDetailsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.bookDelivery.DimensionAndWeightActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.bookDelivery.BookingSuccessFulActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.myShipment.MyShipmentActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.findBranch.BranchDetailsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.findBranch.SelectAreaBranchActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.findBranch.SelectAreaCityActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.findBranch.DirectionActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.bookDelivery.AddressLocationListActiviy"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.bookDelivery.RecipientLocationListActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.bookDelivery.PickUpScheduleActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.trackDelivery.TrackDeliveryActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.trackDelivery.TrackDetailsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.trackDelivery.ScanTrackingCodeActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.profile.MyProfileActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.account.MyAccountActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.account.ChangePasswordActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.profile.UpdateProfileActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.profile.BookmarkedBranchesActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.profile.MyAddressLocationsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.profile.MyRecipientsLocationsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".modules.account.ChangeBindingMobileActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".modules.common.addAddressLocation.AddAddressLocationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <!-- [BEGIN] Google -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />
        <!-- [END] Google -->
        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.yilinker.expresspublic" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->

        <!-- [START gcm_listener] -->
        <service
            android:name=".core.services.gcm.MyGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- [END gcm_listener] -->
        <!-- [START instanceId_listener] -->
        <service
            android:name=".core.services.gcm.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->
        <service
            android:name=".core.services.gcm.RegistrationIntentService"
            android:exported="false">
        </service>

    </application>

</manifest>
