<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dl_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Activity's layout container -->
        <ViewStub
            android:id="@+id/vs_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inflatedId="@+id/vs_content" />

        <!-- Toolbar -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_transparent" />
    </RelativeLayout>

    <!-- Navigation Drawer -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nv_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="false"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer">

        <!-- Logout -->
        <com.yilinker.expresspublic.modules.common.customviews.CustomTextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="72dp"
            android:layout_gravity="bottom"
            android:text="@string/logout"
            android:textSize="14sp"
            app:fontName="Roboto-Medium.ttf"/>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>