<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/divider">
        <!-- Added visibility gone -->
        <!-- Select Area -->
        <com.yilinker.expresspublic.modules.common.customviews.CustomButton
            android:visibility="gone"
            android:id="@+id/btn_selectArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_area"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:background="@drawable/bg_rounded_left_orange_red"
            app:fontName="Roboto-Medium.ttf"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg_rounded_right_white">

            <!-- Search Field -->
            <com.yilinker.expresspublic.modules.common.customviews.CustomEditText
                android:id="@+id/et_searchField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="@color/warm_grey"
                android:singleLine="true"
                android:background="@null"
                app:fontName="Roboto-Regular.ttf"/>

            <!-- Search Icon -->
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_search"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Submit and Update -->
    <com.yilinker.expresspublic.modules.common.customviews.CustomButton
        android:id="@+id/btn_branchNearestToMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="@string/branch_nearest_to_me"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:background="@drawable/bg_rect_marigold"
        android:gravity="center"
        app:fontName="Roboto-Regular.ttf"/>

</LinearLayout>